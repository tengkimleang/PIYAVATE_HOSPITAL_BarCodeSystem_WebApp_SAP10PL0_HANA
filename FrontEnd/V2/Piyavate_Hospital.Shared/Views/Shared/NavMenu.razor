                    </FluentNavLink>
                    @* <FluentNavLink title="Production Process" *@
                    @*                Href="ProductionProcess" *@
                    @*                Icon="@(new Icons.Regular.Size20.Cart())" *@
                    @*                IconColor="Color.Accent"> *@
                    @*     Production Process *@
                    @* </FluentNavLink> *@
                </FluentNavGroup>
            }
            else
