                <FluentNavLink title="Return Request"
                               Href="ReturnRequest"
                               Icon="@(new Icons.Regular.Size20.ArchiveArrowBack())"
                               IconColor="Color.Accent">
                    Return Request
                </FluentNavLink>
                @* <FluentNavLink title="A/R Credit Memo" *@
                @*                Href="arcreditmemo" *@
                @*                Icon="@(new Icons.Regular.Size20.WalletCreditCard())" *@
                @*                IconColor="Color.Accent"> *@
                @*     A/R Credit Memo *@
                @* </FluentNavLink> *@
                <FluentNavLink title="Good Receipt PO"
                               Href="goodreceptpoform"
                               Icon="@(new Icons.Regular.Size20.BoxArrowUp())"
                               IconColor="Color.Accent">
                    Good Receipt PO
                </FluentNavLink>
                <FluentNavLink title="Good Return"
