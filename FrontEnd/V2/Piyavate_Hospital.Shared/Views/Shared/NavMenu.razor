                               IconColor="Color.Accent">
                    Inventory Counting
                </FluentNavLink>
                <FluentNavLink title="Issue For Production"
                               Href="issueforproduction"
                               Icon="@(new Icons.Regular.Size20.DocumentBulletListArrowLeft())"
                               IconColor="Color.Accent">
                    Issue For Production
                </FluentNavLink>
                <FluentNavLink title="Return From Component"
                               Href="ReturnFromComponent"
                               Icon="@(new Icons.Filled.Size20.GroupReturn())"
                               IconColor="Color.Accent">
                    Return Component
                </FluentNavLink>
                <FluentNavLink title="Receipt Finished Goods"
                               Href="ReceiptsFinishedGoods"
                               Icon="@(new Icons.Regular.Size20.DocumentBulletListArrowLeft())"
                               IconColor="Color.Accent">
                    Receipt FG
                </FluentNavLink>
                @* <FluentNavLink title="Production Process" *@
                @*                Href="ProductionProcess" *@
                @*                Icon="@(new Icons.Regular.Size20.Cart())" *@
                @*                IconColor="Color.Accent"> *@
                @*     Production Process *@
                @* </FluentNavLink> *@
            }
            @*<FluentNavLink title="Return Component" Href="returncomponent" Icon="@(new Icons.Regular.Size20.Cart())" IconColor="Color.Accent">Return Component</FluentNavLink>
            *@
        </FluentNavMenu>
    </nav>
</div>
<FluentGrid Spacing="2" OnBreakpointEnter="@UpdateGridSize" AdaptiveRendering="true">
</FluentGrid>

@code {
    private bool expanded = true;
    private bool isXs = false;

    private void UpdateGridSize(GridItemSize size)
    {
        // dataGrid = size == GridItemSize.Xs ? "width: 1200px;height:205px" : "width: 100%;height:405px";
        if (size == GridItemSize.Xs)
        {
            isXs = true;
        }
        else
        {
            isXs = false;
        }
    }

}