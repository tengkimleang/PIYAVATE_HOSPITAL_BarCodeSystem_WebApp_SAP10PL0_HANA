@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <NavHeader/>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu/>
        <FluentBodyContent Class="body-content">
            @* class="content" *@
            <div class="body-render">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="http://netsys.co.th/en/" target="_blank">About NETSYS</a>
        <FluentSpacer/>
        @*<a href="http://netsys.co.th/en/" target="_blank">About NETSYS</a>*@
    </FluentFooter>
    <FluentDesignTheme Mode="DesignThemeModes.Light" OfficeColor="OfficeColor.Access"/>
</FluentLayout>

<FluentToastProvider @rendermode="InteractiveWebAssembly"/>
<FluentDialogProvider @rendermode="InteractiveWebAssembly"/>
<FluentTooltipProvider/>
<FluentMessageBarProvider/>
