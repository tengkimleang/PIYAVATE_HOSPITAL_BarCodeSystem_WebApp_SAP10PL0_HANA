@page "/goodreceptpoform"
@using Piyavate_Hospital.Shared.Views.GoodReceptPo.MobileAppScreen
@rendermode InteractiveWebAssembly
<PageTitle>Good Receipt PO</PageTitle>
<AuthorizeView Context="anotherName">
    <Authorized>
        <FluentGrid Spacing="2" OnBreakpointEnter="@UpdateGridSize" AdaptiveRendering="true">
        </FluentGrid>
        @if (_init)
        {
            @if (_isXs)
            {
                <GoodsReceiptPoDashboard />
            }
            else
            {
                <GoodsReceiptPoDefault Token="@anotherName.User.FindFirst("token")?.Value" />
            }
        }
    </Authorized>
</AuthorizeView>